<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity=""
        android:contentDescription="background"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo" />
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="aaluti.login.Log_In"
    >
    <include
        android:layout_marginTop="15dp"
        android:id="@+id/microsoft_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        layout="@layout/btnmicrosoft"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <include
        android:id="@+id/java_button"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        layout="@layout/btnjava"
        android:layout_below="@+id/microsoft_button"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
    <include
        android:id="@+id/html_button"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        layout="@layout/btnhtml"
        android:layout_below="@+id/java_button"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <include
        android:id="@+id/android_button"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        layout="@layout/btnandroid"
        android:layout_below="@+id/html_button"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
    <include
        android:id="@+id/tecnologias_button"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        layout="@layout/btntecnologias"
        android:layout_below="@+id/android_button"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <include
        android:id="@+id/curso_button"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        layout="@layout/btncursos"
        android:layout_below="@+id/tecnologias_button"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
    <include
        android:id="@+id/disen_button"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        layout="@layout/btndisenio"
        android:layout_below="@+id/curso_button"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

</RelativeLayout>
</merge>