<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity=""
        android:contentDescription="background"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo" />
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_below="@+id/ysabel"
    tools:context="aaluti.login.MainActivity"
    >
    <!--android:background="@color/background"-->



    <ImageView
        android:id="@+id/ysabel_logo"
        android:layout_width="180dp"
        android:layout_height="244dp"
        android:src="@drawable/logo_firma_luti_icon_2"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textColor="@color/colorPrimary"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:id="@+id/room"
        android:textColor="@color/colorAccent"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/colorPrimary"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:password="true"
        android:singleLine="true"
        android:id="@+id/pass"
        android:textColor="@color/colorAccent"
        />


    <include
        android:id="@+id/login_button"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        layout="@layout/btnlogin"
        android:layout_below="@+id/pass"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/badLog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/wrong_log"
        android:textColor="#ff121a"
        android:visibility="invisible"
        android:layout_below="@+id/pass"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:id="@+id/ysabel"/>





</LinearLayout>
</merge>